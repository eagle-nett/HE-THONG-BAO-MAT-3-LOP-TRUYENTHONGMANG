@*CONTACT SECTION*@
<section class="py-5" style="background-color: #dddddd;">
    <div class="container px-4">
        <h2 class="text-center mb-4" style="color: black; font-size: 1.75rem; font-weight: bold;">Liên Hệ</h2>
        <form method="post" action="/Home/SendContactEmail" class="mx-auto p-4" style="max-width: 600px; background-color: #2d3748; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            @Html.AntiForgeryToken()
            <div class="mb-3">
                <label for="name" class="form-label text-white fw-semibold">Tên của bạn</label>
                <input type="text" id="name" name="name" class="form-control" placeholder="Nhập tên của bạn" style="background-color: #1a202c; color: white; border: none; border-radius: 4px;" required />
            </div>
            <div class="mb-3">
                <label for="email" class="form-label text-white fw-semibold">Email</label>
                <input type="email" id="email" name="email" class="form-control" placeholder="Nhập email của bạn" style="background-color: #1a202c; color: white; border: none; border-radius: 4px;" required />
            </div>
            <div class="mb-3">
                <label for="message" class="form-label text-white fw-semibold">Tin nhắn</label>
                <textarea id="message" name="message" rows="4" class="form-control" placeholder="Nhập tin nhắn của bạn" style="background-color: #1a202c; color: white; border: none; border-radius: 4px;" required></textarea>
            </div>
            <button type="submit" class="btn w-100" style="background-color: #6b46c1; color: white; font-weight: bold;">Gửi tin nhắn</button>
            @if (ViewBag.Message != null)
            {
                <div class="mt-3 alert @ViewBag.AlertClass" role="alert">
                    @ViewBag.Message
                </div>
            }
        </form>
    </div>
</section>

